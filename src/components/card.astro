---
interface Props {
  href: string;
  title: string;
  subtitle: string;
  imageSrc: string;
}

const { href, title, subtitle, imageSrc } = Astro.props;
---

<a href={href} class="group">
  <div 
    class={`flex flex-col flex-1 p-5 gap-2 h-[350px] md:h-[450px] col-span-2 bg-white justify-start items-start`}
  >
    <div class="flex-1 flex w-full justify-center items-center">
      <img src={imageSrc} alt="Custom image" class="h-[120px] md:h-[130px]"/>
    </div>
    <h2 class="text-2xl md:text-4xl font-semibold tracking-tight">{title}</h2>
    <p class="text-lg md:text-2xl font-medium leading-tight">{subtitle}</p>
  </div>
</a>
